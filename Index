<body>
  <h1>Fundos Imobili√°rios - Maiores Dividendos</h1>
  <button onclick="loadData()">üîÅ Atualizar agora</button>
  <table>
    <thead>
      <tr>
        <th>Ticker</th>
        <th>Pre√ßo</th>
        <th>Dividend Yield</th>
        <th>√öltimo Dividendo</th>
        <th>Data</th>
      </tr>
    </thead>
    <tbody id="fiis-table-body">
      <tr><td colspan="5">Carregando...</td></tr>
    </tbody>
  </table>

  <script>
    async function loadData() {
      const tbody = document.getElementById('fiis-table-body');
      tbody.innerHTML = '<tr><td colspan="5">Carregando...</td></tr>';
      try {
        const res = await fetch('/api/fiis');
        const data = await res.json();
        tbody.innerHTML = '';
        data.forEach(fii => {
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${fii.ticker}</td>
            <td>R$ ${fii.price?.toFixed(2) || '-'}</td>
            <td>${(fii.dividend_yield * 100).toFixed(2)}%</td>
            <td>R$ ${fii.last_dividend?.toFixed(2) || '-'}</td>
            <td>${fii.last_dividend_date || '-'}</td>
          `;
          tbody.appendChild(row);
        });
      } catch (error) {
        console.error("Erro ao buscar dados:", error);
        tbody.innerHTML = '<tr><td colspan="5">Erro ao carregar dados.</td></tr>';
      }
    }

    // Carrega ao iniciar
    loadData();

    // Atualiza√ß√£o autom√°tica a cada 1 minuto
    setInterval(loadData, 60000);
  </script>
</body>
</html>
